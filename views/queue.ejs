
<div class = "eventQueue">
	<h2>Order Queue</h2>
	<% for (var i=0; i<orderAttributes.length; i++) { %>
		<div data-id = <%= queueID %> data-order-id = <%= orderAttributes[i].orderID %> class = "panel panel-primary queue">
			<div class="panel-heading"><%= orderAttributes[i].drink %></div>
				<div class = "panel-body">
					<div>
						<img src="//graph.facebook.com/<%= orderAttributes[i].fromUserID %>/picture">
						
						<% if (orderAttributes[i]._status===0) { %>
							<button class="btn btn-sm btn-primary" id="notifyButton">Notify</button>
						<% } %>
						<% if (orderAttributes[i]._status===1) { %>
							<button class="btn btn-sm btn-primary" id="servedButton">Served</button>
						<% } %>
					</div>
				</div>
			<div class="panel-footer"><%= orderAttributes[i].fromUser %></div>
		</div>
	<% } %>
</div>

<div class = "hostsMenu">
    <form id = "hostsMenu">
    <h2>Current Menu</h2>
        
	    <% if (menu.drinks !== undefined){
	    	for (var i = 0; i < menu.drinks.length; i++){ %>
	    		<div class="panel panel-primary">
		    		<div class="panel-heading" data-drink="<%= menu.drinks[i].drink %>"> 
		    			<%= menu.drinks[i].drink + " (" + menu.drinks[i].stock + ")"%>
		    			<input type='button' class = "btn btn-xs btn-default removeDrink" id="remove-drink" value = "Remove">
		    		</div>
		    		<div class="panel-body">
			    		<input type="text" id="<%=menu.drinks[i].drink%>"name="<%=menu.drinks[i].drink + "stock"%>" value="">
			    		<input type="button" class="btn btn-sm btn-primary" id="setStock" data-drink="<%= menu.drinks[i].drink %>" data-menu-id="<%= queueID %>" value="Set Stock">
		    		</div>
		    	</div>
	    		<br>
	    	<% } %>
		<% } %>
		<div class="panel panel-primary"> 
			<div class="panel-body">
				<input type="text" id="customName" data-menu-id="<%= queueID %>" value="Enter Drink">
				<input type="text" id="customStock" data-menu-id="<%= queueID %>" value="Enter Stock">
				<input type="button" class="btn btn-sm btn-primary" id="addCustomDrink" value="Add Drink">
			</div>
		</div> 
	</form>
</div>