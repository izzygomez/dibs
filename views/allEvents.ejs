<div id = "allEvents">
	<div id = 'hostRegisteredEvents' class = 'event-container'>
		<h3>Dibs Events You're Hosting</h3>
		<% for(var i = 0; i<hostRegisteredEvents.length; i++) { %>
			<% include ./hostRegisteredEvent %>	
		<% } %>
	</div>
	<div id = 'hostNotRegisteredEvents' class = 'event-container'>
		<h3>Other Events You're Hosting</h3>
		<% for(var i = 0; i<hostNotRegisteredEvents.length; i++) { %>
			<% include ./hostNotRegisteredEvent %>
		<% } %>
	</div>
	<div id = 'attendingRegisteredEvents' class = 'event-container'>
		<h3>Dibs Events You're Attending</h3>
		<% for(var i = 0; i<attendingRegisteredEvents.length; i++) { %>
			<% include ./attendingRegisteredEvent %>
		<% } %>
	</div>
	<div id = 'attendingNotRegisteredEvents' class = 'event-container'>
		<h3>Other Events You're Attending</h3>
		<% for(var i = 0; i<attendingNotRegisteredEvents.length; i++) { %>
			<% include ./attendingNotRegisteredEvent %>
		<% } %>
	</div>
</div>